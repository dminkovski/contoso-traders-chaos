{
  "compilerOptions": {
    "jsx": "react",
    "target": "es6",
    "module": "es2020",
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "removeComments": false,
    "lib": ["dom", "es2021"],
    "allowJs": true,
    "checkJs": false,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": "./",
    "paths": {
      "app/*": ["src/*"]
    },
    "importHelpers": true,
  },
  "include": ["src/","types.d.ts"],
  "exclude": ["node_modules", "public", "**/*.spec.ts", "**/*.spec.tsx"]  
}